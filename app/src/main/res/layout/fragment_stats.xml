<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:text="Your Stats"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Subtle divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <!-- Summary card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/section_purple"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/divider_purple"
            app:strokeWidth="1dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Overview"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:id="@+id/tvTasksCompleted"
                    android:text="Tasks completed: 0"
                    android:textColor="@color/text_dark"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvTotalTasksCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total tasks completed: 0"
                    android:textSize="14sp"
                    android:paddingTop="4dp"/>

                <TextView
                    android:id="@+id/tvAchievementsUnlocked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Achievements unlocked: 0"
                    android:textSize="14sp"
                    android:paddingTop="4dp"/>



            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- XP / Level card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/section_purple"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/divider_purple"
            app:strokeWidth="1dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Experience"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:id="@+id/tvExactXp"
                    android:text="XP: 0 / 100"
                    android:textColor="@color/text_dark"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvLevel"
                    android:text="Level: 1"
                    android:textColor="@color/text_dark"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- HP / Mana card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/section_purple"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/divider_purple"
            app:strokeWidth="1dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Vitals"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:id="@+id/tvHp"
                    android:text="HP: 0/100"
                    android:textColor="@color/text_dark"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvMana"
                    android:text="Mana: 0/100"
                    android:textColor="@color/text_dark"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Spacer at bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>
</ScrollView>
