        <com.google.android.material.card.MaterialCardView
            android:id="@+id/privacySectionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/section_purple"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditPersonalInfo"
                    style="@style/Widget.Settings.RowButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/row_personal_info" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="40dp"
                    app:dividerColor="@color/divider_purple" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChangePassword"
                    style="@style/Widget.Settings.RowButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/row_password" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="40dp"
                    app:dividerColor="@color/divider_purple" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBanking"
                    style="@style/Widget.Settings.RowButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/row_banking" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="40dp"
                    app:dividerColor="@color/divider_purple" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLocation"
                    style="@style/Widget.Settings.RowButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/row_location" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="40dp"
                    app:dividerColor="@color/divider_purple" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNotifications"
                    style="@style/Widget.Settings.RowButton"
                    android:layout_width="match_parent"
