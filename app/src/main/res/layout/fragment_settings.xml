        <!-- Skills Section -->
        <TextView
            android:id="@+id/labelSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"
            android:text="@string/section_skills"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="@color/text_dark" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/skillsSectionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/section_purple"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAchievements"
                    style="@style/Widget.Settings.RowButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/row_achievements" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="40dp"
                    app:dividerColor="@color/divider_purple" />

                <com.google.android.material.button.MaterialButton
