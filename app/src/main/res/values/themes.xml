<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HabitFlow" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="Widget.Settings.RowButton" parent="Widget.Material3.Button.TextButton">

        <item name="android:insetRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/section_text_on_purple</item>
        <!-- Keep background transparent so the section color shows through -->
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>
    <color name="section_purple">#7A73D1</color>
    <color name="divider_purple">#211C84</color>
    <color name="section_text_on_purple">#FFFFFFFF</color>
    <style name="Theme.HabitFlow" parent="Base.Theme.HabitFlow" />
</resources>